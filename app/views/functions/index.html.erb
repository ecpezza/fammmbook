<div class="page-header">
  <h1>
    Functions
  </h1>
  <a href="/roles/new" class="btn btn-sm btn-success">Add a function to your interests or experience</a>
  <a href="/functions/new" class="btn btn-sm btn-success">Something missing? Add a new function</a>

</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Function name</th>
        <th>See everyone with exeperience or interest</th>
      </tr>

      <% @functions.each do |function| %>
      <tr>
        <td><%= function.function_name %></td>
      </td>
        <td>
          <a href="/functions/<%= function.id %>" class="btn btn-primary">Show people</a>
          <!-- <a href="/functions/<%= function.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_function/<%= function.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
