<div class="page-header">
  <h1>
    Functions
    <a href="/functions/new" class="btn btn-lg btn-success">New Function</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Function name</th>
        <th>Experience</th>
        <th>Interest</th>
        <th>Actions</th>
      </tr>

      <% @functions.each do |function| %>
      <tr>
        <td><%= function.function_name %></td>
        <td><%= function.experience %></td>
        <td><%= function.interest %></td>
        <td>
          <a href="/functions/<%= function.id %>" class="btn btn-primary">Show</a>
          <a href="/functions/<%= function.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_function/<%= function.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
