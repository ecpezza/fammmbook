<div class="page-header">
  <h3>Function #<%= @function.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Function name</dt>
      <dd><%= @function.function_name %></dd>

      <dt>Experience</dt>
      <dd><%= @function.experience %></dd>

      <dt>Interest</dt>
      <dd><%= @function.interest %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/functions" class="btn btn-primary">
        Back
      </a>
      <a href="/functions/<%= @function.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_function/<%= @function.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
