<!-- Validation failure messages -->
<% if @degree.errors.any? %>
  <% @degree.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Your Degree <%= @degree.school.school_name%></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_degree/<%= @degree.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and hidden input for school_id -->
      <input type="hidden" id="school_id" name="school_id" value="<%= @degree.school.id %>">

      <!-- Hidden input for user_id -->
      <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for degree -->
      <div class="form-group">
        <label for="degree" class="control-label">
          Degree
        </label>

        <input type="text" id="degree" name="degree" placeholder="Degree" class="form-control" value="<%= @degree.degree %>">
      </div>

      <!-- Label and input for grad_year -->
      <div class="form-group">
        <label for="grad_year" class="control-label">
          Grad year
        </label>

        <input type="text" id="grad_year" name="grad_year" placeholder="Grad year" class="form-control" value="<%= @degree.grad_year %>">
      </div>

      <button class="btn btn-warning">
        Update Degree
      </button>
      or
      <a href="/users/<%= current_user.id %>">Cancel</a>
    </form>
  </div>
</div>
