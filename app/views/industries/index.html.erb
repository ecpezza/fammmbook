<div class="page-header">
  <h1>
    Industries
  </h1>
  <a href="/involvements/new" class="btn btn-sm btn-success">Add an industry to your interests or experience</a>
  <a href="/industries/new" class="btn btn-sm btn-success">Something missing? Add a new industry</a>

</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <!-- <tr>
        <th>Industry name</th>
        <th>See everyone with exeperience or interest</th>
      </tr> -->

      <% @industries.order("industry_name").each do |industry| %>
      <tr>
        <td><%= industry.industry_name %></td>
      </td>
        <td>
          <h5># of MMMs into this space: <%=industry.involvements.count%></h5><a href="/industries/<%= industry.id %>" class="btn btn-primary">Show who</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
