<!-- Validation failure messages -->
<% if @industry.errors.any? %>
  <% @industry.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Industry</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_industry" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for industry_name -->
      <div class="form-group">
        <label for="industry_name" class="control-label">
          Industry name
        </label>

        <input type="text" id="industry_name" name="industry_name" placeholder="Industry name" class="form-control" value="<%= @industry.industry_name %>">
      </div>

      <!-- Label and input for experience -->
      <div class="checkbox">
        <label for="experience">
          <input type="checkbox" id="experience" name="experience" value="1" <%= "checked" if @industry.experience %>>
          Experience
        </label>
      </div>

      <!-- Label and input for interest -->
      <div class="checkbox">
        <label for="interest">
          <input type="checkbox" id="interest" name="interest" value="1" <%= "checked" if @industry.interest %>>
          Interest
        </label>
      </div>

      <button class="btn btn-success">
        Create Industry
      </button>
      or
      <a href="/industries">Cancel</a>
    </form>
  </div>
</div>
