<div class="page-header">
  <h3><%= @industry.industry_name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>People</dt>
     <dd>
       <ul class="list-group">
       <% @industry.involvements.each do |involvement| %>
         <li class="list-group-item">
           <a href="/users/<%= involvement.user_id %>">
              <img src="<%=involvement.user.profile_photo%>" class="img-responsive" width = "100">
              <%= involvement.user.full_name %>
              </a>
              <p>
              <small><p><b>Experience?</b> <% if involvement.experience==true%> Yes <%else%> Not yet <%end%> </p>
              <p><b>Current Interest?</b> <% if involvement.interest==true%> Yes <%else%> Not right now <%end%></p>
              </small>
           </li>
       <% end %>
       </ul>
     </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/industries" class="btn btn-primary">
        Back
      </a>
      <a href="/industries/<%= @industry.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_industry/<%= @industry.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
