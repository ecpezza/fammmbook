<!-- Validation failure messages -->
<% if @job.errors.any? %>
  <% @job.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Your Experience at <%= @job.company.company_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_job/<%= @job.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and hidden input for company_id -->
    <input type="hidden" id="company_id" name="company_id" value="<%= @job.company.id %>">

      <!-- Hidden input for user_id -->
      <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for start_date -->
      <div class="form-group">
        <label for="start_date" class="control-label">
          Start date
        </label>

        <input type="text" id="start_date" name="start_date" placeholder="Start date" class="form-control" value="<%= @job.start_date %>">
      </div>

      <!-- Label and input for end_date -->
      <div class="form-group">
        <label for="end_date" class="control-label">
          End date
        </label>

        <input type="text" id="end_date" name="end_date" placeholder="End date" class="form-control" value="<%= @job.end_date %>">
      </div>

      <button class="btn btn-warning">
        Update Job
      </button>
      or
      <a href="/users/<%=current_user.id %>">Cancel</a>
    </form>
  </div>
</div>
