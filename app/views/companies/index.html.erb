<div class="page-header">
  <h1>
    Companies
  </h1>
  <a href="/jobs/new" class="btn btn-sm btn-success">Add a company to your work experience</a>
  <a href="/companies/new" class="btn btn-sm btn-success">Something missing? Add a new company</a>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <!-- <tr>
        <th>Company name</th>
        <th>Actions</th>
      </tr> -->

      <% @companies.order("company_name").each do |company| %>
      <tr>
        <td><%= company.company_name %></td>
        <td>
          <h5># of MMMs who've worked here: <%=company.jobs.count%></h5><a href="/companies/<%= company.id %>" class="btn btn-primary">Show who</a>
          <!-- <a href="/companies/<%= company.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_company/<%= company.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
